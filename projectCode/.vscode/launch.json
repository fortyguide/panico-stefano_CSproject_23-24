{
  "version": "0.2.0",
  "configurations": [

    {
      "type": "node",
      "request": "launch",
      "name": "Debug Node.js",
      "program": "${workspaceFolder}/backend/app.js",
      "console": "integratedTerminal"
    },
    {
      "name": "Launch Chrome against localhost",
      "type": "chrome",
      "request": "launch",
      "url": "https://localhost:8081",
      "webRoot": "${workspaceFolder}/src",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "disableNetworkCache": true
    }
  ]
}
